<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="11sp"
            android:id="@+id/tv_sb_containner_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Date" />

        <TextView
            android:textSize="11sp"
            android:id="@+id/tv_sb_containner_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="Name" />

        <TextView
            android:gravity="center_horizontal"
            android:textSize="11sp"
            android:id="@+id/tv_sb_containner_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="Time" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text="Side"
            android:id="@+id/tv_sb_containner_side"
            android:textSize="11sp"
            />

        <TextView
            android:gravity="center_horizontal"
            android:textSize="11sp"
            android:id="@+id/tv_sb_containner_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="Contact" />





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"

        android:id="@+id/rv_admin_showBooking"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>

</LinearLayout>