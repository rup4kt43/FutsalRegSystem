<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_sb_containner_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Date"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_sb_containner_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Name"

            android:textSize="11sp" />

        <TextView
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center_horizontal"
            android:background="@color/layoutColor"
            android:textColor="@android:color/white"
            android:id="@+id/tv_sb_containner_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Time"

            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_sb_containner_side"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Side"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_sb_containner_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="Contact"

            android:textSize="11sp" />

    </LinearLayout>
</LinearLayout>